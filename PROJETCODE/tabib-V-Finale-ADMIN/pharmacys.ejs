        <div class="page-wrapper" style="position: relative;">
            <a href="add-Pharmacy.ejs" class="btn btn-primary btn-rounded float-right" style="position: absolute;top: 80px; right: 20px"><i class="fa fa-plus"></i> Add Pharmacy</a>

            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3" style="width: 20px">
                        <h4 class="page-title">Pharmacys</h4>
                    </div>

                    <div class="dd">
                        
                        <label class="container">All
                          <input type="radio" <%if (!locals.status) { %>checked="checked" <%};%>name="radio" onclick="All('pharmacys')">
                            <span class="checkmark"></span>
                        </label>
                        
                        <label class="container">Active
                            <input type="radio" <%if(locals.status=="1") {%> checked="checked" <%};%> name="radio" onclick="Active('pharmacys')">
                            <span class="checkmark"></span>
                        </label>
                        
                        <label class="container">Blocked
                            <input type="radio" <%if(locals.status=="0") {%> checked="checked" <%};%> name="radio" onclick="Blocked('pharmacys')">
                            <span class="checkmark"></span>
                        </label>
                        <div class="col-sm-8 col-9 text-right m-b-20">
                        </div>
                    </div>
                        <form autocomplete="off" action="/action_page.php">
                            <div class="annotated-list autocomplete" id="users" style=" position: absolute;top: 150px; left: 330px">
                                  <input class="search2" id="myInput" type="text" name="myItems" placeholder="Search">
                                  <button  class="sort2 " data-sort="name" style=" width: 80px">Name</button>
                                  <button class="sort2 " data-sort="born" style=" width: 80px" >Address</button>
                            </div>
                        </form>

                </div>
                
                <div class="row doctor-grid" style="padding-top: 50px;">
                    <% pharmacie.forEach(function(user) { %>
                        <div class="col-md-4 col-sm-4  col-lg-3" id="pharmacy<%=user.idpharmacie%>">
                            <div class="profile-widget">
                                <div class="doctor-img">
                                    <a class="avatar" href="pharmacy-profile?id=<%=user.idpharmacie%>"><img alt="" src="img/<%=user.phprofile%>"></a>
                                </div>
                                <div class="dropdown profile-action">
                                    <a href="Pharmacys.html#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <% if (user.active == 1) {%>
                                        <a class="dropdown-item" onclick="idvalue(<%=user.idpharmacie%>)" data-toggle="modal" data-target="#block_pharmacy"><i class="fa fa-ban m-r-5"></i> Block</a>
                                        <% } else { %> 
                                        <a class="dropdown-item" onclick="idvalue(<%=user.idpharmacie%>)" data-toggle="modal" data-target="#deblock_pharmacy"><i class="fa fa-unlock m-r-5"></i> Deblock</a>
                                        <% };%>
                                        <a class="dropdown-item" onclick="idvalue(<%=user.idpharmacie%>)"  data-toggle="modal" data-target="#delete_pharmacy"><i class="fa fa-trash m-r-5"></i> Delete</a>

                                    </div>
                                </div>
                                <h4 class="doctor-name text-ellipsis"><a href="pharmacy-profile?id=<%=user.idpharmacie%>"><%= user.nom%> <%= user.prenom%></a></h4>

                                <div class="user-country">
                                    <i class="fa fa-map-marker"></i>
                                    <%=user.adr1%> , <%=user.adr%>
                                </div>
                            </div>
                        </div>
                        <% }); %>

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="see-all">
                            <a class="see-all-btn" href="javascript:void(0);">Load More</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--BLOCK PHARMACY-->
        <div id="block_pharmacy" class="modal fade delete-modal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <img src="assets/img/sent.png" alt="" width="50" height="46">
                        <h3>Are you sure want to block this Pharmacy?</h3>
                        <div class="m-t-20">
                            <a onclick="Close('pharmacy','block')"  class="btn btn-white " data-dismiss="modal ">Close</a>
                            <button type="submit " onclick="changestatus('pharmacy','0')" class="btn btn-danger " > Block </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--BLOCK PHARMACY FIN-->
        <!--DEBLOCK PHARMACY-->
        <div id="deblock_pharmacy" class="modal fade delete-modal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <img src="assets/img/sent.png" alt="" width="50" height="46">
                        <h3>Are you sure want to deblock this Pharmacy?</h3>
                        <div class="m-t-20">
                            <a onclick="Close('pharmacy','deblock')"  class="btn btn-white " data-dismiss="modal ">Close</a>
                            <button type="submit " class="btn btn-danger " onclick="changestatus('pharmacy','1')"> Deblock </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--DEBLOCK PHARMACY FIN-->
        <!--DELETE PHARMACY-->
        <div id="delete_pharmacy" class="modal fade delete-modal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
