                        <div class="m-t-20">
                            <a onclick="Close('pharmacy','delete')"  class="btn btn-white " data-dismiss="modal ">Close</a>
                            <button type="submit " class="btn btn-danger " onclick="deletes('pharmacy')"> Delete </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
